CXX			= @CXX@
CFLAGS			= @JTHREAD_CFLAGS@
INCLUDES		= -I.

JTHREADLIBDIR		= ../lib/
JTHREADINCLUDEDIR	= ../include/
THREADDIR		= pthread/

OBJECTS 		= jmutex.o jthread.o

all: $(OBJECTS)
	cp -f $(OBJECTS) $(JTHREADLIBDIR)
	cp -f *.h $(JTHREADINCLUDEDIR)
	
clean:
	rm -f $(OBJECTS)

jmutex.o: $(THREADDIR)jmutex.cpp jmutex.h
	$(CXX) $(CFLAGS) $(INCLUDES) -c -o jmutex.o $(THREADDIR)jmutex.cpp
	
jthread.o: $(THREADDIR)jthread.cpp jthread.h jmutex.h
	$(CXX) $(CFLAGS) $(INCLUDES) -c -o jthread.o $(THREADDIR)jthread.cpp
